{
  "rules": {
    "no-unused-vars": {
      "level": "warning",
      "options": {
        "ignorePattern": {
          "args": "^_"
        }
      }
    }
  },
  "ignores": [
    "**/test/**",
    "test/**",
    "test/*"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.js",
        "test/**/*.ts",
        "test/*.ts"
      ],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}