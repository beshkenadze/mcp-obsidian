{
  "name": "mcp-obsidian",
  "module": "index.ts",
  "type": "module",
  "version": "1.0.0",
  "description": "MCP server for Obsidian API",
  "scripts": {
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start:node": "node dist/index.js",
    "generate-types": "bun src/cmd/generate-types.ts",
    "test": "bun test test/index.test.ts",
    "test:all": "bun test",
    "test:integration": "bun test test/integration/*.test.ts",
    "lint": "oxlint --deny-warnings .",
    "lint:fix": "oxlint --fix .",
    "precommit": "bun run lint && bun run test"
  },
  "devDependencies": {
    "@types/bun": "^1.2.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^3.3.2",
    "oxlint": "^0.16.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "openapi-fetch": "^0.13.5",
    "openapi-typescript": "^7.6.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.2"
  }
}